{
  "packages": [
    "go@1.24.5",
    "gomarkdoc@1.1.0",
    "hugo@0.148.2",
    "nodejs@24.5.0",
    "golangci-lint@2.3.1",
    "goreleaser@2.11.2"
  ],
  "shell": {
    "init_hook": [
      "PS1=\"$(echo -e \"\\033[1;34m%~\\033[0m \\n\\033[0;32m%n@devbox\\033[0m âžœ \")\"",
      "echo 'ðŸ“¦ Starmap development environment loaded'",
      "echo 'Tools available: go, hugo, gomarkdoc, golangci-lint, node'"
    ],
    "scripts": {
      "site": "cd site && hugo serve",
      "vet": "go vet ./...",
      "lint": "golangci-lint run",
      "lint-fix": "golangci-lint run --fix",
      "check": "go vet ./... && golangci-lint run && go test ./...",
      "fix": "gofmt -w . && goimports -w -local github.com/agentstation/starmap . && golangci-lint run --fix && go mod tidy",
      "docs": "make generate",
      "test": "go test ./...",
      "test-race": "go test -race ./...",
      "build": "make build"
    }
  }
}
